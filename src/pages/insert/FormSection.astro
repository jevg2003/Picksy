---
interface Props {
  title: string;
  description: string;
  formId: string;
  submitButtonText: string;
  submitButtonColor: "blue" | "indigo" | "red" | "green";
}

const { title, description, formId, submitButtonText, submitButtonColor } = Astro.props;

const buttonColors = {
  blue: "bg-blue-600 hover:bg-blue-700 focus:ring-blue-500",
  indigo: "bg-indigo-600 hover:bg-indigo-700 focus:ring-indigo-500",
  red: "bg-red-600 hover:bg-red-700 focus:ring-red-500",
  green: "bg-green-600 hover:bg-green-700 focus:ring-green-500",
};
---

<div class="space-y-4">
  <h2 class="text-lg font-medium text-gray-900 dark:text-white">{title}</h2>
  <p class="text-sm text-gray-500 dark:text-gray-400">{description}</p>
  <form id={formId} class="space-y-4">
    <slot />
    <button
      type="submit"
      class={`cursor-pointer w-full px-4 py-2 text-white rounded focus:outline-none focus:ring-2 ${buttonColors[submitButtonColor]}`}>
      {submitButtonText}
    </button>
  </form>
</div>
